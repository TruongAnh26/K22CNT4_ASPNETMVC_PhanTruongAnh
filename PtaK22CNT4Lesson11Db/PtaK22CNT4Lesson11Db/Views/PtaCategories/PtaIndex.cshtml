@model IEnumerable<PtaK22CNT4Lesson11Db.Models.PtaCategory>

@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Views/Shared/_Pta2210900087Layout.cshtml";
}

<h2>Index</h2>
<a href="/PtaCategories/PtaCreate" class="btn btn-primary my-3">Thêm mới</a>

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PtaID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PtaCateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PtaStatus)
        </th>
        <th>Chức năng</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PtaID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PtaCateName)
        </td>
        <td>
            
            @if (item.PtaStatus == true)
            {
                <span style="color:green">Hoạt động</span>
            }
            else
            {
                <span style="color:red">Không hoạt động</span>

            }
        </td>
        <td>
            @Html.ActionLink("Edit", "PtaEdit", new { id = item.PtaID }) |
            @Html.ActionLink("Details", "PtaDetails", new { id = item.PtaID }) |
            @Html.ActionLink("Delete", "PtaDelete", new { id = item.PtaID })
        </td>
    </tr>
}

</table>
